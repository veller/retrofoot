{
  "name": "@retrofoot/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"pnpm --filter @retrofoot/api dev\" \"pnpm --filter @retrofoot/web dev\"",
    "build": "pnpm --filter @retrofoot/web build",
    "lint": "pnpm --filter @retrofoot/web lint",
    "typecheck": "nx run-many --target=typecheck",
    "format": "prettier --write .",
    "deploy:prod": "pnpm --filter @retrofoot/api db:migrate:prod && pnpm --filter @retrofoot/api publish:prod && pnpm --filter @retrofoot/web publish:prod"
  },
  "private": true,
  "devDependencies": {
    "@nx/js": "22.4.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "concurrently": "^9.2.1",
    "nx": "22.4.4",
    "prettier": "~3.6.2",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2"
  }
}
